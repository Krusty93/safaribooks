# Test Dockerfile for SafariBooks Downloader
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS test

# Set working directory
WORKDIR /app

# Copy project files
COPY src/ ./src/
COPY Directory.Build.props ./

# Restore dependencies
RUN dotnet restore src/SafariBooksDownloader.slnx

# Build the solution
RUN dotnet build src/SafariBooksDownloader.slnx --configuration Release --no-restore

# Run tests with coverage
CMD ["dotnet", "test", "src/SafariBooksDownloader.slnx", "--configuration", "Release", "--no-build", "--verbosity", "normal", "--collect", "XPlat Code Coverage"]